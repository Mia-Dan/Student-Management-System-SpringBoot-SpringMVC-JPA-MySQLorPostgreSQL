@Mapper
public interface EmpMapper {

    @Select("select * from emp limit #{start}, #{pageSize}")
    List<Emp> listPage( @Param("start")  Integer start, @Param("pageSize") Integer pageSize); // 当有多个参数时，需要写@Param注解

    // 按视频这样写，在我的环境中会报错：List<Emp> listPage( Integer start, Integer pageSize);

